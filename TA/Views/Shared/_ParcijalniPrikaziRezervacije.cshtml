@using TA.Models

<div class="col-md-8">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4>Prikaz svih rezervacija</h4>
        </div>
        <div class="panel-body">
            @if (Radnik.PrikaziRezervacije().Count == 0)
            {
                    <p>Trenutno nema nijedne rezervacije</p>
            }

            else
            {
                int brojac = 0;
                <table class="table table-condensed table-hover">
                     <thead>
                            <tr>
                                <td>Redni broj</td>
                                <td>Šifra rezervacije</td>
                                <td>Ime korisnika</td>
                                <td>Smeštaj</td>
                                <td></td>
                            </tr>
                    </thead>
                    <tbody>
                        @foreach (RezervacijaViewModel rezervacija in Radnik.PrikaziRezervacije())
                        {
                            brojac++;
                        <tr>
                            <td>@brojac</td>
                            <td>@rezervacija.RezervacijaID</td>
                            <td>@rezervacija.KorisnickoIme</td>
                            <td>@rezervacija.Mesto</td>
                            <td>
                                <span onclick="show(this)" data-id=@rezervacija.RezervacijaID class="span-link">Otkaži</span>
                                <span class="display-none">@Html.ActionLink("Otkaži", "RezervacijeObrisi", new { sifra = rezervacija.RezervacijaID }, new { @id = rezervacija.RezervacijaID, @class = "linkovi btn btn-danger" })</span>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <div class="modal">
            <div class="modal-content">
                <div class="panel panel-danger">
                    <div class="panel-heading"><span class="close cursor">&times;</span></div>
                    <div class="panel-body">
                        <h4>Da li ste sigurni da želite da otkažete rezervaciju?</h4>
                        <div class="modal-content-btn"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  